#!/bin/sh

set -e

DESC="NFS-mount browser"

test -x /usr/sbin/rpc.nfsd -a -f /etc/exports || exit 0

case "$1" in
start)
	printf "Starting $DESC:"
    nfs-mount-browser.py &
	printf " nfsmount-browser"
	printf ".\n"
	;;
stop)
	printf "Stopping $DESC:"
	killall nfs-mount-browser.py
	printf " nfsmount-browser"
	printf ".\n"
	;;
restart)
	$0 stop
	sleep 1
	$0 start
	;;
*)
	printf "Usage: $0 {start|stop|restart}\n" >&2
	exit 1
	;;
esac

exit 0
